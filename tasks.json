{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Enter commit message:",
            "default": "Update changes"
        },
        {
            "id": "branchName",
            "type": "promptString", 
            "description": "Enter branch name:",
            "default": "${command:getCurrentBranch}"
        }
    ],
    "tasks": [
        {
            "label": "Git: Dynamic Commit and Push",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "git add . && git commit -m \"${input:commitMessage}\" && git push origin ${input:branchName}"
            ],
            "problemMatcher": []
        }
    ],
    "presentation": {
        "reveal": "always",
        "panel": "new"
    },
    "commands": [
        {
            "name": "getCurrentBranch",
            "command": "git status | grep 'On branch' | cut -d' ' -f3"
        }
    ]
}
